<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_graph_bar"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:orientation="horizontal" >

    <!-- y축 라벨 -->

    <TextView
        android:id="@+id/y_label"
        android:layout_width="50dip"
        android:layout_height="80dip"
        android:textSize="12dip"
        android:gravity="center" 
        />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#ff8c00"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <!-- 첫 번째 바 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_margin="1px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bar_img1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ff4500" />

            <TextView
                android:id="@+id/bar_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- 두 번째 바 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_margin="1px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bar_img2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#b5a642" />

            <TextView
                android:id="@+id/bar_value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!-- 세 번째 바 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_margin="1px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bar_img3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#191970" />

            <TextView
                android:id="@+id/bar_value3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>