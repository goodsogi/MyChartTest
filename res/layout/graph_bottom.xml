        android:gravity="center"
        android:textSize="10dip"
        />
    <TextView 
        android:id="@+id/graph_bottom_value4"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="10dip"
        />
